<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="Person_Operation" resource="default" engine="innodb" comment="Operation Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="first_name" nullable="false" comment="First Name"/>
        <column xsi:type="varchar" name="last_name" nullable="false" comment="Last Name"/>
        <column xsi:type="varchar" name="email" nullable="false" comment="Email"/>
        <column xsi:type="varchar" name="mobile" nullable="true" comment="Mobile"/>
        <column xsi:type="int" name="age" nullable="true" comment="Age"/>
        <column xsi:type="varchar" name="gender" nullable="true" comment="Gender"/>
        <column xsi:type="varchar" name="address" nullable="true" comment="Address"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
